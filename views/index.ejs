    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/redirection.js"></script>
</head>

<body>
    <% include partials/_header %>
        <div class="newDiv">
            <div>
                <h1>CREATE A NEW POLL</h1>
            </div>
            <main class="container">
                <form class="poll-form-name" action="/home" method="POST">
                    <h4>Title:</h4>
                    <br>
                    <textarea name="title" placeholder="name" class="pollForm"></textarea>
                    <section class="new-poll-description"></section>
                    <h4>Description:</h4>
                    <br>
                    <textarea name="description" placeholder="description" class="pollForm"></textarea>
                    </section>
                    <br>
                    <section class="new-poll-end">
                        <h4 class="endIn">End In:</h4>
                        <select name="formEnd">
                            <option value="3">3 mins</option>
                            <option value="5">5 mins</option>
                            <option value="10">10 mins</option>
                            <option value="15">15 mins</option>
                            <option value="30">30 mins</option>
                            <option value="60">60 mins</option>
                            <option value="360">6 hours</option>
                            <option value="1440">24 hours</option>
                            <option value="2880">48 hours</option>
                        </select>
                        <br>
                        <br>
                </form>
                <input type="submit" value="SUBMIT">
                </section>
                <br>
            </main>
        </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>

</html>
