<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>


    <link href="https://fonts.googleapis.com/css?family=Bungee|Source+Sans+Pro:300,300i,600,600i&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/newPolls.css" type="text/css" />


    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
     <!-- Top nav bar (fixed) -->
     <nav class="navigation">
        <span>AppTitle</span>
        <span class="logout">
          <button type="button" class="lesultsButton">
           Results
          </button>
          <button type="button" class="logoutButton">
            Logout
          </button>
        </span>
      </nav>

      <div class ="newDiv">

         <!--Header-->
     <header class="main-header">
        <div>
          <h1>CREATE A NEW POLL</h1>
        </div>
      </header>
        <main class="container">
          <section class="new-poll-name">
            <form class="poll-form-name" action="/polls/:id" method="POST">
              Title: <textarea name="text" placeholder="name"class="pollForm"></textarea>
            </form>
          </section>

          <section class="new-poll-description">
            <form class="poll-form-description" action="/polls/:id" method="POST">
              Description: <textarea name="text" placeholder="description" class="pollForm"></textarea>
            </form>
          </section>
          <br>
          <section class="new-poll-end-time">
            <form class="poll-form-end" action="/polls/:id" method="POST">
              End In: <textarea name="text" placeholder="" class="pollForm"></textarea>
            </form>
            <input type="submit" value="sumbit">
          </section>
          <br>
        </main>
      </div>
    </div>
  </body>
</html>
